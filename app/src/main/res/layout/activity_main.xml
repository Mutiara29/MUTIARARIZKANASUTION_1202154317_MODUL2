<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mutiararizkanst.mutiararizkanasution_1202154317_modul2.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginBottom="33dp"
            android:layout_marginEnd="154dp"
            android:layout_marginRight="154dp" />

        <ImageView
            android:id="@+id/imageView"
            style="@style/Animation.AppCompat.Tooltip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/progressBar"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:maxHeight="100mm"
            android:maxWidth="100mm"
            android:scrollbarSize="?attr/actionBarSize"
            android:theme="@style/Animation.AppCompat.DropDownUp"
            app:srcCompat="@drawable/halal" />


    </RelativeLayout>


</LinearLayout>
